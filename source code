def calculate_cgpa():
    """
    Calculates the Cumulative Grade Point Average (CGPA) 
    based on semester SGPA and corresponding credits.
    """
    print(" Welcome to the Python CGPA Calculator ")
    
    # 1. Get the total number of semesters
    while True:
        try:
            num_semesters = int(input("Enter the total number of semesters completed: "))
            if num_semesters > 0:
                break
            else:
                print("Please enter a number greater than zero.")
        except ValueError:
            print("Invalid input. Please enter a whole number.")

    # Initialize accumulators
    total_grade_points = 0  # Sum of (SGPA * Credits) for all semesters
    total_credits_earned = 0 # Sum of Credits for all semesters

    # 2. Iterate through each semester
    for i in range(1, num_semesters + 1):
        print(f"\n--- Semester {i} ---")
        
        # Get SGPA
        while True:
            try:
                # Assuming SGPA is on a standard 10-point scale (0.0 to 10.0)
                sgpa = float(input(f"Enter SGPA for Semester {i} (e.g., 9.5): "))
                if 0.0 <= sgpa <= 10.0:
                    break
                else:
                    print("SGPA must be between 0.0 and 10.0.")
            except ValueError:
                print("Invalid input. Please enter a valid number for SGPA.")
        
        # Get Credits
        while True:
            try:
                credits = int(input(f"Enter Total Credits Earned in Semester {i} (e.g., 24): "))
                if credits >= 0:
                    break
                else:
                    print("Credits cannot be negative.")
            except ValueError:
                print("Invalid input. Please enter a whole number for credits.")

        # 3. Accumulate the weighted grade points and total credits
        total_grade_points += (sgpa * credits)
        total_credits_earned += credits

    # 4. Calculate the final CGPA
    print("\n===============================")
    if total_credits_earned > 0:
        cgpa = total_grade_points / total_credits_earned
        
        print(f"Total Grade Points Accumulated: {total_grade_points:.2f}")
        print(f"Total Credits Earned: {total_credits_earned}")
        print(f"Your Calculated CGPA is: **{cgpa:.2f}**")
    else:
        print("No credits were earned. Cannot calculate CGPA.")
    print("===============================")

# Execute the function
if __name__ == "__main__":
    calculate_cgpa()
